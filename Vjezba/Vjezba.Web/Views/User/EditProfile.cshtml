@model Vjezba.Model.User

@{
    ViewData["Title"] = "Uredi profil";
}

<div class="hero">
    <div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card shadow-lg p-4 rounded-3" style="width: 400px; background-color: #fff3d9;">
            <h2 class="text-center mb-4 text-dark">Uredi profil</h2>

            <form asp-action="EditProfile" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="Password" />

                <div class="form-group mb-3">
                    <label>Ime</label>
                    <input asp-for="FirstName" class="form-control rounded-pill" />
                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label>Prezime</label>
                    <input asp-for="LastName" class="form-control rounded-pill" />
                    <span asp-validation-for="LastName" class="text-danger small"></span>
                </div>

                <div class="d-grid mt-3">
                    <button type="submit" class="btn btn-light rounded-pill fw-bold">
                        Spremi promjene
                    </button>
                </div>
                <div class="text-center mt-3">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                        Odustani
                    </a>
                </div>
            </form>

            <h3 class="text-center mt-5 mb-3 text-dark">Moje rezervacije</h3>

            @if (Model.Rezervacije != null && Model.Rezervacije.Any())
            {
                <table class="table table-bordered table-striped text-center">
                    <thead class="table-dark">
                        <tr>
                            <th>Datum</th>
                            <th>Vrijeme</th>
                            <th>Trajanje</th>
                            <th>Stol</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rezervacija in Model.Rezervacije)
                        {
                            <tr>
                                <td>@rezervacija.Datum_Rezervacije.ToString("dd.MM.yyyy")</td>
                                <td>@rezervacija.Vrijeme_Rezervacije.ToString("HH:mm")</td>
                                <td>@rezervacija.Vrijeme_Trajanja_Rezervacije</td>
                                <td>@(rezervacija.Stol != null ? rezervacija.Stol.Broj_Stolica : "N/A")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-center text-muted">Nemate rezervacija.</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
