@model User

@{
    ViewData["Title"] = "Registracija";
}



<div class="hero">
    <div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card shadow-lg p-4 rounded-3" style="width: 450px; background-color: #fff3d9;">
            <h2 class="text-center mb-4 text-dark">Registracija</h2>

            <form asp-action="Register" method="post">
                <div class="form-group mb-3">
                    <label class="form-label">Ime</label>
                    <input asp-for="FirstName" class="form-control rounded-pill" />
                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Prezime</label>
                    <input asp-for="LastName" class="form-control rounded-pill" />
                    <span asp-validation-for="LastName" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control rounded-pill" type="email" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Broj mobitela</label>
                    <input asp-for="PhoneNumber" class="form-control rounded-pill" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>


                <div class="form-group mb-3">
                    <label class="form-label">Password</label>
                    <input asp-for="Password" class="form-control rounded-pill" type="password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="d-grid mt-3">
                    <input type="submit" value="Spremi" class="btn btn-light rounded-pill fw-bold" />
                </div>
            </form>
        </div>
    </div>
</div>


