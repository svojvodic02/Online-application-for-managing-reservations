@model Vjezba.Model.LoginViewModel

@{
    ViewData["Title"] = "Prijava";
}


<div class="hero">
    <div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card shadow-lg p-4 rounded-3" style="width: 400px; background-color: #fff3d9;">
            <h2 class="text-center mb-4 text-dark">Prijava</h2>

            <form asp-action="Login" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control rounded-pill" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control rounded-pill" type="password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="d-grid mt-3">
                    <input type="submit" value="Prijavi se" class="btn btn-light rounded-pill fw-bold" />
                </div>
                <div class="text-center mt-3">
                    <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Register">
                        Registracija
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
